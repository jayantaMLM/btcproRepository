
@{
    ViewBag.Title = "MyTeam";
}

<script src="~/Scripts/angular.min.js"></script>
<script src="~/app/scripts/TeamMemberController.js"></script>


<section class="wrapper">
    <div ng-app="app" ng-controller="Team" ng-cloak>
        <div class="row">
            <div class="col-sm-12">
                <section class="panel">
                    <header class="panel-heading">
                        <i class=""></i> My TEAM <span><img src="~/Content/loader.gif" ng-show="loading==true" /></span>
                       
                    </header>
                    <div class="panel-body">
                        <div style="margin-bottom:10px">Showing 1 - {{team.length}} of {{team.length}} total</div>
                        
                        <table class="table table-striped table-bordered" style="width:100%;text-align:center">
                            <thead>
                                <tr>
                                    <th style="text-align:center">Profile Pic</th>
                                    <th style="text-align:center">Username</th>
                                    <th style="text-align:center">Name</th>
                                    <th style="text-align:center">Member Type</th>
                                    <th style="text-align:center">Country</th>
                                    <th style="text-align:center">Joining Date</th>
                                    <th style="text-align:center">Binary Leg</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="tm in team">
                                    <td><img src="~/Content/avatar1.jpg" style="height:50px;width:50px"/></td>
                                    <td style="padding-top:22px">{{tm.Username}}</td>
                                    <td style="padding-top:22px">{{tm.Firstname}}</td>
                                    <td>
                                        <img src="~/Content/pluto1.png" ng-if="tm.Defaultpackagecode==1" style="height:50px;width:50px" title="Pluto"/>
                                        <img src="~/Content/Jupiter1.png"  ng-if="tm.Defaultpackagecode==2" style="height:50px;width:50px" title="Jupiter"/>
                                        <img src="~/Content/Earth1.png"  ng-if="tm.Defaultpackagecode==3" style="height:50px;width:50px" title="Earth"/>
                                        <img src="~/Content/Mercury1.png"  ng-if="tm.Defaultpackagecode==4" style="height:50px;width:50px" title="Mercury"/>
                                    </td>
                                    <td  style="padding-top:22px">{{tm.Country}}</td>
                                    <td  style="padding-top:22px">{{tm.Doj}}</td>
                                    <td  style="padding-top:22px" ng-if="tm.BinaryPosition=='L'">Left Leg</td>
                                    <td  style="padding-top:22px" ng-if="tm.BinaryPosition=='R'">Right Leg</td>
                                </tr>
                                <tr ng-repeat="rec in freeteam">
                                    <td><img src="~/Content/avatar1.jpg" style="height:50px;width:50px" /></td>
                                    <td style="padding-top:22px">{{rec.UserName}}</td>
                                    <td style="padding-top:22px">{{rec.FullName}}</td>
                                    <td style="padding-top:22px"><b style="color:red">Free Member</b></td>
                                    <td style="padding-top:22px">{{rec.CountryCode}}</td>
                                    <td style="padding-top:22px">{{rec.Password}}</td>
                                    <td style="padding-top:22px" ng-if="rec.BinaryPosition=='L'">Left Leg</td>
                                    <td style="padding-top:22px" ng-if="rec.BinaryPosition=='R'">Right Leg</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </section>
            </div>
        </div>
    </div>
</section>
