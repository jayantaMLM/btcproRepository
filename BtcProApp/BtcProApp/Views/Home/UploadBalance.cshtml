<script src="~/Scripts/angular.min.js"></script>
<script src="~/app/scripts/UploadBitCoinController.js"></script>

<section class="wrapper" style="background-color:rgba(211, 211, 211, 0.5)">
    <div ng-app="app" ng-controller="UploadWallet" ng-cloak>   
        <div class="row">
                <section class="panel">
                    <header class="panel-heading">
                        <i class="fa fa-sitemap" style="color:green"></i> Account Deposit - BitCoin / Ethereum
                    </header>
                    <div class="panel-body" style="height:500px">
                        <h5><img src="~/Content/Bitcoin2.png" style="width:5%" title="Bitcoin Wallet"/>&nbsp;Bitcoin Account:&nbsp;&nbsp;<span style="color:green">{{wallets.BitcoinWallet}}</span></h5>
                        <br/>
                        <h5><img src="~/Content/Ethereum2.png" style="width:5%" title="Ethereum Wallet"/>&nbsp;Ethereum Account:&nbsp;&nbsp;<span style="color:green">{{wallets.EthereumWallet}}</span></h5>
                        <br/>
                       
                        <h4>After transferring the amount, submit ticket to Support.</h4>
                        <br/>
                    </div>
                </section>
            </div>
        </div>
</section>


